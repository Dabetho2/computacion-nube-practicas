<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Product Management</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
  <style>
    body { padding-top: 50px; padding-bottom: 20px; }
    .navbar { margin-bottom: 20px; }
    .form-container { max-width: 500px; margin: 0 auto; }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="/dashboard">Store Management</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
          aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
</nav>

<div class="container">
  <!-- Add product -->
  <div class="form-container">
    <h2>Add New Product</h2>
    <form id="add-product-form">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" required>
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" step="0.01" class="form-control" id="price" required>
      </div>

      <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" min="0" class="form-control" id="quantity" required>
      </div>

      <button type="button" class="btn btn-primary" onclick="createProduct()">Create Product</button>
    </form>
  </div>

  <!-- Products list -->
  <h2 class="mt-4">Products List</h2>
  <table id="product-list" class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Available Quantity</th>
        <th>Order Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <div class="mb-4">
    <button type="button" class="btn btn-secondary mr-2" onclick="getProducts()">Get Products</button>
    <button type="button" class="btn btn-success" onclick="orderProducts()">Order Products</button>
  </div>

  <!-- Orders list -->
  <hr class="my-4">
  <h2>Orders List</h2>
  <button type="button" class="btn btn-info mb-2" onclick="getOrders()">Check Orders</button>

  <table id="order-list" class="table table-striped">
    <thead>
      <tr>
        <th>Order Id</th>
        <th>User</th>
        <th>Email</th>
        <th>Total</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>

<script src="/static/scriptProducts.js"></script>
</body>
</html>
